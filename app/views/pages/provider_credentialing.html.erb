    <link rel="stylesheet" href="<%= asset_path('application.css') %>">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" rel="stylesheet">
</head>

<body>
    <%= render "shared/navbar" %>

    <!-- Hero Section -->
    <div class="hero-section text-white py-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h1 class="display-4 text-primary fw-bold mb-4">Provider Credentialing Services</h1>
                    <p class="lead mb-4">
                        Simplify and streamline your provider credentialing process with our expert services. We ensure compliance, reduce delays, and help you focus on delivering exceptional patient care.
                    </p>
                    <a href="<%= contact_path %>" class="mt-4 btn">
                        <span style="color: white; font-size: 13px;">Find Out More</span>
                    </a>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12">
                    <%= image_tag 'coder.png', alt: 'rcm', style: "float: inline-end; width: 85%;" %>
                </div>
            </div>
        </div>
    </div>

    <!-- Key Features Section -->
    <div class="container py-5" id="services">
        <div class="row text-center mb-5">
            <div class="col-12">
                <h2 class="fw-bold text-primary mb-3">Why Choose Our Provider Credentialing Services?</h2>
                <p class="lead text-muted">We provide tailored solutions to ensure compliance, efficiency, and peace of mind for your practice.</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm text-center p-4">
                    <i class="bi bi-file-earmark-check-fill text-primary fs-1 mb-3"></i>
                    <h5 class="fw-bold mb-3">Compliance Assurance</h5>
                    <p class="text-muted">We ensure your credentialing process meets all regulatory and payer requirements.</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm text-center p-4">
                    <i class="bi bi-clock-fill text-primary fs-1 mb-3"></i>
                    <h5 class="fw-bold mb-3">Faster Turnaround</h5>
                    <p class="text-muted">Our efficient processes reduce delays and get your providers credentialed quickly.</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm text-center p-4">
                    <i class="bi bi-person-check-fill text-primary fs-1 mb-3"></i>
