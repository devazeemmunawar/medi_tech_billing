    <!-- Process Section -->
    <div class="bg-light py-5">
        <div class="container">
            <div class="row text-center mb-5">
                <div class="col-12">
                    <h2 class="fw-bold text-primary mb-3">Our Provider Credentialing Process</h2>
                    <p class="lead text-muted">A streamlined, step-by-step approach to ensure accuracy and efficiency.</p>
                </div>
            </div>
            <div class="row g-4">
                <div class="col-md-6 col-lg-3">
                    <div class="card h-100 border-0 shadow-sm text-center p-4">
                        <div class="badge bg-primary rounded-circle p-3 mb-3 mx-auto">1</div>
                        <h5 class="fw-bold mb-3">Application Preparation</h5>
                        <p class="text-muted">We gather and prepare all necessary documents for credentialing applications.</p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="card h-100 border-0 shadow-sm text-center p-4">
                        <div class="badge bg-primary rounded-circle p-3 mb-3 mx-auto">2</div>
                        <h5 class="fw-bold mb-3">Submission & Follow-Up</h5>
                        <p class="text-muted">We submit applications and follow up with payers to ensure timely processing.</p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="card h-100 border-0 shadow-sm text-center p-4">
                        <div class="badge bg-primary rounded-circle p-3 mb-3 mx-auto">3</div>
                        <h5 class="fw-bold mb-3">Verification & Approval</h5>
                        <p class="text-muted">We verify credentials and ensure approval from all relevant payers.</p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="card h-100 border-0 shadow-sm text-center p-4">
                        <div class="badge bg-primary rounded-circle p-3 mb-3 mx-auto">4</div>
                        <h5 class="fw-bold mb-3">Ongoing Maintenance</h5>
                        <p class="text-muted">We manage renewals and updates to keep your providers credentialed and compliant.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Call to Action Section -->
    <div class="text-white py-5">
        <div class="container text-center">
            <h2 class="fw-bold mb-4">Ready to Simplify Your Credentialing Process?</h2>
            <p class="lead mb-4">Contact us today to learn how our Provider Credentialing services can help your practice thrive.</p>
            <a href="<%= contact_path %>" style="color: white;" class="btn btn-lg">Get Started</a>
        </div>
    </div>

    <%= render "shared/footer" %>

    <!-- Scripts -->
    <script src="<%= asset_path('js/jquery.min.js') %>"></script>
    <script src="<%= asset_path('js/jquery-migrate-3.0.0.js') %>"></script>
    <script src="<%= asset_path('js/jquery-ui.min.js') %>"></script>
    <script src="<%= asset_path('js/easing.js') %>"></script>
    <script src="<%= asset_path('js/colors.js') %>"></script>
    <script src="<%= asset_path('js/popper.min.js') %>"></script>
    <script src="<%= asset_path('js/bootstrap-datepicker.js') %>"></script>
    <script src="<%= asset_path('js/jquery.nav.js') %>"></script>
    <script src="<%= asset_path('js/slicknav.min.js') %>"></script>
    <script src="<%= asset_path('js/jquery.scrollUp.min.js') %>"></script>
    <script src="<%= asset_path('js/niceselect.js') %>"></script>
    <script src="<%= asset_path('js/tilt.jquery.min.js') %>"></script>
    <script src="<%= asset_path('js/owl-carousel.js') %>"></script>
    <script src="<%= asset_path('js/jquery.counterup.min.js') %>"></script>
    <script src="<%= asset_path('js/steller.js') %>"></script>
    <script src="<%= asset_path('js/wow.min.js') %>"></script>
    <script src="<%= asset_path('js/jquery.magnific-popup.min.js') %>"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/waypoints/2.0.3/waypoints.min.js"></script>
    <script src="<%= asset_path('js/bootstrap.min.js') %>"></script>
    <script src="<%= asset_path('js/main.js') %>"></script>
</body>

</html>

<!-- Custom CSS -->
<style>
    body {
        font-family: 'Poppins', sans-serif;
    }

    .text-primary {
        color: #1a76d1 !important;
    }

    .bg-primary {
        background-color: #1a76d1 !important;
    }

    .bg-gradient-primary {
        background: linear-gradient(135deg, #1a76d1, #004080);
    }

    .btn-primary {
        background-color: #1a76d1;
        border-color: #1a76d1;
    }

    .btn-primary:hover {
        background-color: #004080;
        border-color: #004080;
    }

    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
    }

    .badge {
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
    }

    .lead {
        font-size: 1.25rem;
        line-height: 1.6;
    }

    .fw-bold {
        font-weight: 700 !important;
    }
</style>